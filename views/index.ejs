    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <!-- Favicons -->
    <link rel="icon" href="images/appicon.png">
    <link rel="apple-touch-icon" href="/docs/4.5/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="/docs/4.5/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="/docs/4.5/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="manifest" href="/docs/4.5/assets/img/favicons/manifest.json">
    <link rel="mask-icon" href="/docs/4.5/assets/img/favicons/safari-pinned-tab.svg" color="#563d7c">
    <link rel="icon" href="/docs/4.5/assets/img/favicons/favicon.ico">
    <meta name="msapplication-config" content="/docs/4.5/assets/img/favicons/browserconfig.xml">
    <link
        href="https://fonts.googleapis.com/css2?family=ABeeZee&family=Aclonica&family=Berkshire+Swash&family=Cookie&family=Kalam:wght@400;700&family=Philosopher:wght@400;700&display=swap"
        rel="stylesheet">
    <meta name="theme-color" content="#563d7c">
    
        

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <!-- Custom styles for this template -->
    <link href="/css/styless.css" rel="stylesheet">
</head>

<body class="text-center">
    <form action="/" class="form-signin" method="post">
        <img class="mb-4 img" src="/images/covidredsquare.png" alt="" width="250" height="250" >
        <input id="countryInput"type="text" name="count" class="form-control top" placeholder="Enter country name " required autofocus>
        <button class="btn btn-lg btn-primary btn-block" style="margin-top: 10px;" type="submit"><b>Find Status</b></button>
        <!-- <h1 style="font-family: 'ABeeZee', sans-serif;">&copy; Himanshu Verma Shipra Verma</h1>
        <h1 style="font-family: 'Aclonica', sans-serif;">&copy; Himanshu Verma Shipra Verma</h1>
        <h1 style="font-family: 'Berkshire Swash', cursive;">&copy; Himanshu Verma Shipra Verma</h1>
        <h1 style="font-family: 'Cookie', cursive;">&copy; Himanshu Verma Shipra Verma</h1>
        <h1 style="font-family: 'Kalam', cursive;">&copy; Himanshu Verma Shipra Verma</h1>
        <h1 style="font-family: 'Philosopher', sans-serif;">&copy; Himanshu Verma Shipra Verma</h1> -->
        <h4 class="mt-5 mb-3 text-muted text-center"><span style="color: black;font-family: 'Philosopher', sans-serif;">&copy; Himanshu Verma Co.ltd</span></h4>
    </form>
    <% if(country !== null){ %>
        <div class="jumbotron jumbotron-fluid" style="padding: 5px 5px 5px 5px; width: 33%; margin-right: 15px; border-radius: 5%;">
            <div class="container display-3">
                <p style="font-family: 'Aclonica', sans-serif;"><b>Global</b></p>
            </div>
            <h3 style="font-family: 'ABeeZee', sans-serif;">Total Confirmed Cases: <%=gtotalcon%></h3>
            <h3 style="font-family: 'ABeeZee', sans-serif;">Daily New Cases: <%=gnewcon%></h3>
            <span style="color: red;">
                <h3 style="font-family: 'ABeeZee', sans-serif;">Total Deaths: <%=gtotald %></h>
            </span>
            <span style="color: red;">
                <h3 style="font-family: 'ABeeZee', sans-serif;">Daily New Deaths: <%=gnewd%></h3>
            </span>
            <span style="color: green;">
                <h3 style="font-family: 'ABeeZee', sans-serif;">Total Recovered: <%=gtotalr%></h3>
            </span>
            <span style="color: green;">
                <h3 style="font-family: 'ABeeZee', sans-serif;">Daily Recovered Cases: <%=gnewr%></h3>
            </span>
        </div>
        <div class="jumbotron jumbotron-fluid" style="padding: 5px 5px 5px 5px; width: 33%;margin-right: 10px; border-radius: 5%;">
            <div class="container display-3">
                    <p style="font-family: 'Aclonica', sans-serif;"><b><%=country%></b></p>
            </div>
                <h3 style="font-family: 'ABeeZee', sans-serif;">Total Confirmed Cases: <%=totalcon%></h3>
                <h3 style="font-family: 'ABeeZee', sans-serif;">Daily New Cases: <%=newcon%></h3>
                <span style="color: red;"><h3 style="font-family: 'ABeeZee', sans-serif;">Total Deaths: <%=totald %></h></span>
                <span style="color: red;"><h3 style="font-family: 'ABeeZee', sans-serif;">Daily New Deaths: <%=newd%></h3></span>
                <span style="color: green;"><h3 style="font-family: 'ABeeZee', sans-serif;">Total Recovered: <%=totalr%></h3></span>
                <span style="color: green;"><h3 style="font-family: 'ABeeZee', sans-serif;">Daily Recovered Cases: <%=newr%></h3></span>
                <h3 style="font-family: 'ABeeZee', sans-serif; color: black;">Updated Till: <%=date%></h3>
            </div>
        </div>
    <% } %>

    <% if(error !== null){ %>
        <div class="jumbotron jumbotron-fluid"
            style="padding: 5px 5px 5px 5px; width: 30%; margin-right: 15px; border-radius: 5%;">
            <div class="container display-3">
                <p style="font-family: 'Aclonica', sans-serif;"><b>Global</b></p>
            </div>
            <h3 style="font-family: 'ABeeZee', sans-serif;">Total Confirmed Cases: <%=gtotalcon%></h3>
            <h3 style="font-family: 'ABeeZee', sans-serif;">Daily New Cases: <%=gnewcon%></h3>
            <span style="color: red;">
                <h3 style="font-family: 'ABeeZee', sans-serif;">Total Deaths: <%=gtotald %></h>
            </span>
            <span style="color: red;">
                <h3 style="font-family: 'ABeeZee', sans-serif;">Daily New Deaths: <%=gnewd%></h3>
            </span>
            <span style="color: green;">
                <h3 style="font-family: 'ABeeZee', sans-serif;">Total Recovered: <%=gtotalr%></h3>
            </span>
            <span style="color: green;">
                <h3 style="font-family: 'ABeeZee', sans-serif;">Daily Recovered Cases: <%=gnewr%></h3>
            </span>
        </div>
        <div class="jumbotron" style="padding: 5px 5px 5px 5px; width: 40%; margin-right: 15px; border-radius: 20px;">
            <div class="container">
                <h1 style="font-family: 'ABeeZee', sans-serif;">Showing Global statistics</h2>
                <span style="color: darkred;"><h2 style="font-family: 'ABeeZee', sans-serif;">Enter the correct Country name.</h2></span>
                <h1 class="">Try again !</h1>
            </div>
        </div>
    <% } %>

</body>

</html>